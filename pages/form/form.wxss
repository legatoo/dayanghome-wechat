/* form.wxss */

.body {
    display: flex;
    height: 100%;
    flex-direction: column;
    padding: 20px;
}

.body .head {
    flex: 0 0 5%;
}

.body .foot {
    flex: 0 0 5%;
    text-align: center;
}

.foot .notice {
    font-size: 13px;
    color: gray;
}

.body .flexbox {
    flex: 0 0 90%;
    display: flex;
    flex-direction: column;
    -webkit-border-radius: 8px/7px;
    -moz-border-radius: 8px/7px;
    border-radius: 8px/7px;
    background-color: #ebebeb;
    box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.31);
    -webkit-box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.31);
    -moz-box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.31);
    border: solid 1px #cbc9c9;
}

.flexbox .header {
    font-size: 28px;
    font-weight: 200;
    color: black;
    text-align: center;
    margin: 10px;
}

.Grid {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
}

.Grid-cell {
    text-align: center;
}

.cell-u-1of4 {
    flex: 0 0 25%;
}

.cell-u-3of4-white {
    flex: 0 0 75%;
    background: white;
}

.cell-u-3of4-white-fat {
    flex: 0 0 75%;
    background: white;
    padding-bottom: 20px;
    padding-top: 20px;
}

.cell-u-3of4-transparent {
    flex: 0 0 75%;
}

.flexbox .footer {
    padding-top: 5px;
}

.flexbox .inputblock {
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 20px;
    margin-right: 5px;
}

.notice {
    font-size: 13px;
    color: red;
}
