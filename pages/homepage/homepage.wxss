/* homepage.wxss */

.body {
  position: fixed;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.top {
  flex: 1.3;
  align-items: center;
}

.middle {
  flex: 5;
  display: flex;
  flex-direction: column;
  background: lightgray
}

.functionwrapper {
  display: flex;
  flex-direction: column;
  height: 80%;
}

.functionwrapper .level1{
  display: flex;
  height: 50%;
}

.functionwrapper .level2{
  display: flex;
  height: 50%;
}

.functionleft {
  display: flex;
  flex-direction: column;
  width: 50%;
  background: red;
}

.functionleft .cell1to6{
  flex: 1;
  background: white;
  text-align: center;
  color: gray;
}

.functionleft .cell2to6{
  flex: 2;
  background: white;
}

.functionright {
  display: flex;
  flex-direction: column;
  width: 50%;
  background: white;
}

.functionright .cell1to6{
  flex: 1;
  background: white;
  text-align: center;
  color: gray;
}

.functionright .cell2to6{
  flex: 2;
  background: white;
}

.footer {
  flex: 2;
}

.footercontent {
  height: 100%;
}

.padding {
  flex: 1;
}

.paddingsmall {
  flex: 0.5;
  background: lightgrey;
}

.toppadding {
  flex: 0.2;
  background: lightgrey;
}


.circular--square {
  width: 144rpx;
  height: 144rpx;
  margin-top: 10%;
  margin-bottom: 10%;
  margin-left: 30%;
  margin-right: 30%;
  border-radius: 50%;
}