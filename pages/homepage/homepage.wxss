/* homepage.wxss */

.body {
    display: block;
    flex-direction: column;
    height: 100%;
    background: whitesmoke;
    text-align: center
}

.body .logobanner {
    flex: 1;
    width: 100%;
    height: 100px;
}

.functionwrapper {
    display: block;
    flex-direction: column;
    height: 80%;
    margin-top: 10px;
}

.functionwrapper .level {
    display: flex;
    height: 30%;
}

.functionblock {
    display: flex;
    flex-direction: column;
    width: 50%;
    background: white
}

.functionblock .cell1to6 {
    flex: 1;
    text-align: center;
    color: grey;
    padding: 3px
}

.functionblock .cell2to6 {
    flex: 2;
}

.circular--square {
    width: 144rpx;
    height: 144rpx;
    margin-top: 10%;
    margin-bottom: 10%;
    margin-left: 30%;
    margin-right: 30%;
    border-radius: 50%;
}
